{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 3,
    "customTemplates": [
        {
            "name": "blank",
            "title": "Blank",
            "postTypes": [
                "page",
                "post"
            ]
        },
        {
            "name": "blog",
            "title": "Blog",
            "postTypes": [
                "page"
            ]
        },
        {
            "name": "sidebar",
            "title": "Sidebar",
            "postTypes": [
                "page",
                "post"
            ]
        }
    ],
    "settings": {
        "appearanceTools": true,
        "layout": {
            "contentSize": "1215px",
            "wideSize": "1519.2px"
        },
        "color": {
            "defaultPalette": false,
            "custom": true,
            "palette":[
                {
                    "color": "#ffffff",
                    "name":"White",
                    "slug":"white"
                },
                {
                    "color": "#000000",
                    "name":"Black",
                    "slug":"black"
                },
                {
                    "color": "rgb(250, 141, 38)",
                    "name":"Orange",
                    "slug":"orange"
                },
                {
                    "color": "#afb765",
                    "name":"Light Green",
                    "slug":"light-green"
                }
            ]
        },
        "spacing": {
            "units": ["px","em","rem","vh","vw","%"]
        },
        "typography": {
            "fontFamilies": [
                {
                    "fontFamily": "Open Sans, sans-serif",
                    "name": "Open Sans",
                    "slug": "open-sans",
                    "fontFace": [
                        {
                            "fontFamily": "Open Sans, sans-serif",
                            "fontStyle": "normal",
                            "fontWeight": "520"
                        },
                        {
                            "fontFamily": "Open Sans, sans-serif",
                            "fontStyle": "nav-links",
                            "fontWeight": "500"
                        }
                    ]
                },
                {
                    "fontFamily": "Georgia,Times New Roman, Times, serif",
                    "name": "System Font",
                    "slug": "system-font"
                }
            ],
            "fontSizes": [
                {
                    "fluid":false,
                    "name": "smallishhhh",
                    "size": "0.9rem",
                    "slug": "small"
                }
            ]
        },
        "useRootPaddingAwareAlignments": true
    },
    "styles":{
        "typography":{
            "fontFamily":"var(--wp--preset--font-family--open-sans)"
        }    
    },
    "templateParts": [
        {
            "area": "header",
            "name": "header"
        },
        {
            "area": "footer",
            "name": "footer"
        }
    ]
}